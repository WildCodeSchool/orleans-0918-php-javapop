{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Modifier un événement</h1>

    <p class="text-primary">Vous voulez modifier: {{ event.id }} {{ event.title }}</p>
    <div class="row">
        <p class="text-primary col-4">Les champs indiqués par une * sont obligatoires.</p>
        <p class="text-danger justify-content-center">
            {% if errors is not empty %}
                {% for error in errors %}{{ error }}{% endfor %}
            {% endif %}
        </p>
    </div>
    <div class="row">
        <div class="col-8">
            <form method="post" class="text-white ">
                <div class="m-2">
                    <input type="hidden" value="{{ event.id }}" name="id">
                </div>
                <div class="m-2">
                    <label class="col-3" for="title">Titre de l'événement *</label>
                    <input class="col-8  p-3" type="text" id="title" value="{{ event.title }}" name="title"
                           required="required">
                </div>
                <div class="m-2">
                    <label class="col-3" for="date">Date de l'événement *</label>
                    <input class="col-8  p-3" type="date" id="date" value="{{ event.date|date('Y-m-d') }}" name="date"
                           required="required">
                </div>
                <div class="m-2">
                    <label class="col-3" for="comment">Présentation de l'événement</label>
                    <input class="col-8  p-3 comment" type="text" id="comment" value="{{ event.comment }}"
                           name="comment">
                </div>
                <div class="d-flex justify-content-center m-2">
                    <input type="submit" name="validate" value="Valider">
                    <input type="reset" value="Effacer">
                </div>
            </form>
        </div>
        <div class="col-3 d-flex align-items-center">
            <i><a href="/admin/eventAdmin/index">retour à la page Administration des événements</a></i>

        </div>
    </div>

{% endblock %}
